<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="3dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="3dip">
        <ImageView
            android:id="@+id/self_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/resource2"
            android:layout_marginRight="2dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/self_name"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="ME"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/self_status"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_centerVertical="true"

                />

        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/holo_orange_light"
        />

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawSelectorOnTop="false" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/holo_orange_light"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_gravity="bottom"
        android:padding="3dip"

        >
        <ImageView
            android:id="@+id/gotoChat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/goto_logo"
            android:layout_marginRight="2dp"

            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/gotoChatText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/go_to_chat"
                android:gravity="center_horizontal"
                 />

            <EditText
                android:id="@+id/setChatName"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:hint="@string/set_chat_name"
                android:background="@drawable/edit_text"
                />


            </LinearLayout>
        </LinearLayout>






</LinearLayout>