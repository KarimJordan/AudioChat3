<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="5dip"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="false"
        android:layout_marginRight="5dip"
        >

        <ImageView
            android:id="@+id/device_list_icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/contacts"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="DEVICE NAME"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail" />

    <TextView
        android:id="@+id/device_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/device_name"
        android:layout_alignStart="@+id/device_name"

        />

    <TextView
        android:id="@+id/device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATUS"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/device_address"
        android:layout_alignEnd="@+id/device_address" />



</RelativeLayout>